<!-- Date updater script -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get current date
    const today = new Date();
    
    // Format date like "April 22nd, 2023"
    const monthNames = ["January", "February", "March", "April", "May", "June",
      "July", "August", "September", "October", "November", "December"];
    
    const month = monthNames[today.getMonth()];
    const day = today.getDate();
    const year = today.getFullYear();
    
    // Add ordinal suffix to day
    let dayWithSuffix;
    if (day > 3 && day < 21) dayWithSuffix = day + "th";
    else if (day % 10 === 1) dayWithSuffix = day + "st";
    else if (day % 10 === 2) dayWithSuffix = day + "nd";
    else if (day % 10 === 3) dayWithSuffix = day + "rd";
    else dayWithSuffix = day + "th";
    
    // Format the date
    const formattedDate = `${month} ${dayWithSuffix}, ${year}`;
    
    // Update all elements with current-date class
    document.querySelectorAll('.current-date').forEach(function(el) {
      el.textContent = formattedDate;
    });
  });
</script>

