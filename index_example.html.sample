      <script> 
        // Script moved outside the div
        let playerLoaded=false;
        const io = new IntersectionObserver(([entry]) => {
          if (entry.isIntersecting && !playerLoaded) {
            playerLoaded = true;
            import('https://player.vimeo.com/api/player.js')
              .then(() => {
                const iframeElement = document.getElementById('vimeo-iframe');
                const player = new Vimeo.Player(iframeElement);

                // Ensure dataLayer exists (GTM typically initializes this)
                window.dataLayer = window.dataLayer || [];

                const videoSrc = iframeElement.getAttribute('src') || '';
                const videoTitle = iframeElement.getAttribute('title') || 'Vimeo Video';
                let vimeoVideoId = 'unknown';
                const srcMatch = videoSrc.match(/video\/(\d+)/);
                if (srcMatch && srcMatch[1]) {
                  vimeoVideoId = srcMatch[1];
                }

                player.on('play', function() {
                  window.dataLayer.push({
                    'event': 'vimeo_video_play',
                    'video_event_category': 'Vimeo Video',
                    'video_event_action': 'Play',
                    'video_event_label': videoTitle,
                    'video_title': videoTitle,
                    'video_id': vimeoVideoId,
                    'video_url': videoSrc,
                    'video_provider': 'Vimeo'
                  });
                });

                player.on('pause', function() {
                  player.getCurrentTime().then(function(seconds) {
                    player.getDuration().then(function(duration) {
                      const percent = duration > 0 ? Math.round((seconds / duration) * 100) : 0;
                      window.dataLayer.push({
                        'event': 'vimeo_video_pause',
                        'video_event_category': 'Vimeo Video',
                        'video_event_action': 'Pause',
                        'video_event_label': videoTitle,
                        'video_title': videoTitle,
                        'video_id': vimeoVideoId,
                        'video_url': videoSrc,
                        'video_provider': 'Vimeo',
                        'video_current_time': Math.round(seconds),
                        'video_duration': Math.round(duration),
                        'video_percent_played': percent
                      });
                    });
                  });
                });

                player.on('ended', function() {
                  window.dataLayer.push({
                    'event': 'vimeo_video_ended',
                    'video_event_category': 'Vimeo Video',
                    'video_event_action': 'Ended',
                    'video_event_label': videoTitle,
                    'video_title': videoTitle,
                    'video_id': vimeoVideoId,
                    'video_url': videoSrc,
                    'video_provider': 'Vimeo',
                    'video_percent_played': 100
                  });
                  // Reset progress for next play
                  progressTracked = { 25: false, 50: false, 75: false, 90: false };
                });

                let progressTracked = { 25: false, 50: false, 75: false, 90: false };
                player.on('timeupdate', function(data) {
                  const percent = Math.round((data.percent) * 100);
                  Object.keys(progressTracked).forEach(thresholdKey => {
                    const numThreshold = parseInt(thresholdKey);
                    if (percent >= numThreshold && !progressTracked[numThreshold]) {
                      window.dataLayer.push({
                        'event': 'vimeo_video_progress',
                        'video_event_category': 'Vimeo Video',
                        'video_event_action': `Progress ${numThreshold}%`,
                        'video_event_label': videoTitle,
                        'video_title': videoTitle,
                        'video_id': vimeoVideoId,
                        'video_url': videoSrc,
                        'video_provider': 'Vimeo',
                        'video_percent_played': numThreshold
                      });
                      progressTracked[numThreshold] = true;
                    }
                  });
                });
                
                // Reset progress tracking if video is played again after ending or seeking to start
                const resetProgressFlags = () => {
                    progressTracked = { 25: false, 50: false, 75: false, 90: false };
                };

                player.on('seeked', function(data) {
                    if (data.percent < 0.01) { // Seeked to beginning
                        resetProgressFlags();
                    } else { // Resync progress flags if seeking past milestones
                        Object.keys(progressTracked).forEach(thresholdKey => {
                            const numThreshold = parseInt(thresholdKey);
                            if (data.percent * 100 >= numThreshold) {
                                progressTracked[numThreshold] = true;
                            } else {
                                progressTracked[numThreshold] = false;
                            }
                        });
                    }
                });
                 player.on('play', function() { 
                    player.getEnded().then(function(ended) {
                        if (ended) { // If it was ended and played again
                            resetProgressFlags();
                        }
                    });
                    // Ensure progress is reset if replaying from the start
                    player.getCurrentTime().then(function(time) {
                        if (time < 1) { // A small threshold for "start"
                            resetProgressFlags();
                        }
                    });
                });

              })
              .catch(function(error) {
                console.error('Error loading or interacting with Vimeo Player API:', error);
              });
          }
        }, {
          rootMargin: '0px 0px 200px 0px' // preload just before it comes into view
        });
        // Observe the section just BEFORE the video so the script preloads earlier
        io.observe(document.getElementById('wipe-out'));
      </script>
      
