<script type="module">
  // Dynamic load: cart-drawer, bundle-selection, Swiper & slider after LCP or interaction
  const loadNonCritical = (() => {
    let loaded = false;
    return () => {
      if (loaded) return;
      loaded = true;
      // Cart drawer & bundle-selection (modules)
      import('/js/cart-drawer.js');
      import('/js/bundle-selection.js');
      // Swiper (UMD) then slider (module)
      const tag = document.createElement('script');
      tag.src = '/dist/swiper.min.js';
      tag.async = true;
      tag.onload = () => import('/js/slider.js');
      document.body.appendChild(tag);
    };
  })();

  if ('PerformanceObserver' in window) {
    new PerformanceObserver((entries, obs) => {
      loadNonCritical(); obs.disconnect();
    }).observe({ type: 'largest-contentful-paint', buffered: true });
  }
  ['pointerdown','touchstart','keydown','scroll']
    .forEach(evt => addEventListener(evt, loadNonCritical, { once:true, passive:true }));
  addEventListener('load', loadNonCritical, { once:true });
</script>

<!-- START: Discount Calculation Script -->
<script>
document.addEventListener('DOMContentLoaded', () => {
  // Modified function to accept a DOM element instead of a selector string
  function calculateAndUpdateDiscountsForSection(sectionElement) {
    if (!sectionElement) {
      console.warn('calculateAndUpdateDiscountsForSection called with null element.');
      return;
    }
    const sectionId = sectionElement.id; // Get ID for logging

    // Selectors are now relative to the provided sectionElement
    let bundleContainerSelector;
    let discountContainerSelector;

    if (sectionId === 'offer-mobile') {
      bundleContainerSelector = '.grid.grid-cols-3.gap-3'; 
      discountContainerSelector = '.flex.gap-2';
    } else if (sectionId === 'offer') { 
      // Using simpler relative selectors, assuming structure within each #offer is consistent
      bundleContainerSelector = '.grid.grid-cols-1.sm\\:grid-cols-3.gap-4';
      discountContainerSelector = '.grid.grid-cols-3.gap-2';
    } else {
        console.error(`Unknown section ID: ${sectionId}`);
        return;
    }

    const bundleContainer = sectionElement.querySelector(bundleContainerSelector);
    const discountContainer = sectionElement.querySelector(discountContainerSelector);

    if (!bundleContainer || !discountContainer) {
      console.warn(`Could not find bundle or discount containers within section #${sectionId} using relative selectors: Bundle='${bundleContainerSelector}', Discount='${discountContainerSelector}'`);
      return;
    }
    
    const bundleCards = Array.from(bundleContainer.querySelectorAll('label[data-variant-id]'));
    const discountTargets = Array.from(discountContainer.children);

    if (bundleCards.length === 0) {
        console.warn(`No bundle cards found in #${sectionId} with selector 'label[data-variant-id]' within '${bundleContainerSelector}'`);
        return;
    }
     if (discountTargets.length === 0) {
        console.warn(`No discount targets found in #${sectionId} as children of '${discountContainerSelector}'`);
        return;
    }

    if (bundleCards.length !== discountTargets.length) {
        console.warn(`Mismatch between number of bundle cards (${bundleCards.length}) and discount targets (${discountTargets.length}) in #${sectionId}`);
    }

    bundleCards.forEach((card, index) => {
      if (index >= discountTargets.length) return;

      const comparePriceEl = card.querySelector('p.line-through');
      const currentPriceEl = card.querySelector('p.font-bold');
      const discountTargetEl = discountTargets[index];

      if (!comparePriceEl) console.warn(`Compare price element not found for card index ${index} in #${sectionId}`);
      if (!currentPriceEl) console.warn(`Current price element not found for card index ${index} in #${sectionId}`);

      if (comparePriceEl && currentPriceEl && discountTargetEl) { // Added check for discountTargetEl again
        const comparePriceText = comparePriceEl.textContent.replace(/[^0-9.]/g, '');
        const currentPriceText = currentPriceEl.textContent.replace(/[^0-9.]/g, '');

        const comparePrice = parseFloat(comparePriceText);
        const currentPrice = parseFloat(currentPriceText);

        if (!isNaN(comparePrice) && !isNaN(currentPrice) && comparePrice > 0 && comparePrice > currentPrice) {
          const discountPercentage = Math.round(((comparePrice - currentPrice) / comparePrice) * 100);
          discountTargetEl.textContent = `${discountPercentage}% OFF`;
          discountTargetEl.style.display = '';
        } else {
          console.warn(`Could not calculate discount for card index ${index} in #${sectionId}. Prices: Compare=${comparePriceText}, Current=${currentPriceText}`);
          discountTargetEl.textContent = '';
          discountTargetEl.style.display = 'none';
        }
      }
    });
  }

  // Find ALL elements with the specified IDs and run the calculation for each
  document.querySelectorAll('#offer-mobile, #offer').forEach(section => {
    calculateAndUpdateDiscountsForSection(section);
  });
});
</script>
<!-- END: Discount Calculation Script -->

